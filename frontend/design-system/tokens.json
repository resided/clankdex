{
  "name": "ClankDex Design System",
  "version": "1.0.0",
  "description": "Game Boy DMG inspired crypto pokedex",
  
  "colors": {
    "device": {
      "shell": {
        "light": "#e8e4dc",
        "DEFAULT": "#ddd8ce", 
        "dark": "#b5b0a6"
      },
      "bezel": {
        "light": "#2a2a32",
        "DEFAULT": "#1e1e24",
        "dark": "#121216"
      },
      "lcd": {
        "light": "#9bbc0f",
        "DEFAULT": "#8bac0f",
        "dark": "#6b8c0d",
        "text": "#0f380f"
      }
    },
    "ui": {
      "primary": "#DC0A2D",
      "secondary": "#3B4CCA", 
      "accent": "#FFDE00",
      "success": "#51AE5E",
      "danger": "#8B1A3A"
    },
    "elements": {
      "fire": "#FF5722",
      "water": "#2196F3",
      "grass": "#4CAF50",
      "electric": "#FFEB3B",
      "ice": "#00BCD4",
      "fighting": "#795548",
      "poison": "#9C27B0",
      "ground": "#8D6E63",
      "flying": "#90CAF9",
      "psychic": "#E91E63",
      "bug": "#8BC34A",
      "dragon": "#673AB7"
    }
  },

  "typography": {
    "fonts": {
      "pixel": "'Press Start 2P', cursive",
      "body": "'DM Sans', system-ui, sans-serif",
      "mono": "'Courier New', monospace"
    },
    "sizes": {
      "xs": { "size": "8px", "lineHeight": "12px" },
      "sm": { "size": "10px", "lineHeight": "14px" },
      "base": { "size": "12px", "lineHeight": "16px" },
      "lg": { "size": "14px", "lineHeight": "20px" },
      "xl": { "size": "16px", "lineHeight": "24px" },
      "2xl": { "size": "20px", "lineHeight": "28px" }
    }
  },

  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px"
  },

  "borderRadius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "24px",
    "device": "24px 24px 85px 85px"
  },

  "shadows": {
    "device": "0 60px 120px rgba(0, 0, 0, 0.6), 0 30px 60px rgba(0, 0, 0, 0.4)",
    "lcd": "inset 0 3px 6px rgba(0, 0, 0, 0.2), 0 0 15px rgba(155, 188, 15, 0.15)",
    "button": "0 4px 8px rgba(0, 0, 0, 0.3), inset 0 1px 1px rgba(255, 255, 255, 0.1)"
  },

  "animations": {
    "duration": {
      "fast": "0.15s",
      "normal": "0.3s",
      "slow": "0.5s"
    },
    "easing": {
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)",
      "spring": "spring(1, 100, 10, 0)"
    }
  }
}
